	    <m id="6035">ti</m>
	  </w>
	  <w gl="the dog huckleberry">
	    <m id="4407">pa</m>
	    <m id="1173">chishihpúrith</m>
	  </w>,
	  <w>
	    <m id="6361">uxraháthkaay</m>
